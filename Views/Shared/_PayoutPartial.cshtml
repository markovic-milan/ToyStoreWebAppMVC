@model ShopModel
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Your Cart</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body" id="Item_remove">
            <div id="alert_placeholder_delete">
            </div>
            <input type="hidden" asp-for="NotInStock" />
            <div id="div_data">
            </div>
        </div>
        <div class="modal-footer cart_footer">
            <button id="dismis" type="button" class="btn btn-secondary dismis" data-dismiss="modal">Dismis</button>
            <button id="buy" name="buy" class="btn btn-primary buy">Pay</button>
        </div>
    </div>
</div>