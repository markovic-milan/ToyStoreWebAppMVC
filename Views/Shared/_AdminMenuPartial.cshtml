@using Microsoft.AspNetCore
@using Microsoft.AspNetCore.Identity
@using ToyStoreWebAppMVC.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin"))
{
    <li class="nav-item dropdown show">
        <a class="dropdown-toggle nav-link text-dark" href="#" data-toggle="dropdown">Admin</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-area="Admin" asp-controller="Toy" asp-action="Index"><i class="fas fa-box mr-2"></i>Toys</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="UserOrder" asp-action="Index"><i class="fas fa-users mr-2"></i>User Orders</a>
        </div>
    </li>
}
